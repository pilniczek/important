// VSCode custom settings
{
  "workbench.colorTheme": "Monokai",
  "typescript.check.npmIsInstalled": false,
  "window.zoomLevel": 0,
  "editor.insertSpaces": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.rulers": [80,100],
  // "editor.detectIndentation": false, // potential danger
  "editor.tabSize": 2,
  "editor.fontWeight": "100",
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
  },
  "javascript.format.enable": false, // 3rd party ESLint better
  "telemetry.enableCrashReporter": false, // not nice
  "telemetry.enableTelemetry": false, // not nice
  "php.suggest.basic": false,
  "window.restoreWindows": "all",
  "javascript.updateImportsOnFileMove.enabled": "always",
  //"search.location": "panel",
}