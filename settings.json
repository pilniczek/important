/*
* GUI for editing settings. In 1.27.
* access the JSON settings editor,
* either by using the command Open Settings (JSON)
* or by changing your default settings editor with the "workbench.settings.editor" setting.
*/
{
  "workbench.colorTheme": "Monokai",
  "typescript.check.npmIsInstalled": false,
  "window.zoomLevel": 0,
  // "editor.insertSpaces": false,
  "editor.formatOnSave": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.rulers": [80,100],
  // "editor.detectIndentation": false, // potential danger
  "editor.tabSize": 2,
  "editor.fontWeight": "100",
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
  },
  "javascript.format.enable": false,
  "telemetry.enableCrashReporter": false, // not nice
  "telemetry.enableTelemetry": false, // not nice
  "php.suggest.basic": false,
  "window.restoreWindows": "all",
  "sasslint.configFile": "./sass-lint.yml",
  "html.format.enable": false,
  "html.format.endWithNewline": true,
  "eslint.autoFixOnSave": true,
  "[latte]": {
  },
  "editor.renderWhitespace": "boundary",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  //"search.location": "panel",
}